# Database
DATABASE_URL="file:./dev.db"

# NextAuth.js
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# RouterOS API
# Example configuration for MikroTik routers
ROUTEROS_API_USER="admin"
ROUTEROS_API_PASSWORD="your-router-password"
ROUTEROS_API_PORT="8728"
ROUTEROS_API_SECURE_PORT="8729"

# Session Management
SESSION_MAX_AGE="86400" # 24 hours in seconds

# Application Settings
APP_NAME="PPPoE Manager"
APP_URL="http://localhost:3000"

# Default Admin Credentials
DEFAULT_ADMIN_EMAIL="admin@example.com"
DEFAULT_ADMIN_PASSWORD="admin123"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"

# Scheduler Settings
EXPIRY_CHECK_INTERVAL="3600" # Check for expired users every hour (in seconds)
DISABLE_EXPIRED_USERS="true" # Automatically disable expired users

# Email Notifications (optional)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@example.com"